            </DockPanel>

            
            <local:ucTab_OperationMonitor
                x:Name="ucTab_OperationMonitor"
                Grid.Row="1"
                Margin="3"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="2"
                Visibility="Visible"/>
            <local:ucTab_ProgressMonitor
                x:Name="ucTab_ProgressMonitor"
                Grid.Row="1"
                Margin="3"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="2"
                Visibility="Hidden"/>
            <local:ucTab_WorkStatus
                x:Name="ucTab_WorkStatus"
                Grid.Row="1"
                Margin="3"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="2"
                Visibility="Hidden"/>
            <local:ucTab_ErrorHistory
                x:Name="ucTab_ErrorHistory"
                Grid.Row="1"
                Margin="3"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="2"
                Visibility="Hidden"/>
        </Grid>



        <local:ucFooter
            x:Name="ucFooter"
            Grid.Row="3"
            Margin="0"/>

        <local:ucKeyControl
            x:Name="ucKeyControl"
            Grid.Row="4"
            Margin="0"/>
        
    </Grid>
    
</Window>
