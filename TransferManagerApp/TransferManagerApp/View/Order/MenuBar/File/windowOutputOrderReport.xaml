                x:Name="listviewStationOrderCount"
                Margin="0,15,0,15"
                FontSize="20"
                Padding="0"
                Background="#F5F5F5"
                ScrollViewer.VerticalScrollBarVisibility="Hidden">

                <!-- ↓ Resource ↓ -->
                <ListView.Resources>
                    <!--ヘッダー色設定-->
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Background" Value="LightSteelBlue"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="IsHitTestVisible" Value="False"/>
                    </Style>
                </ListView.Resources>

                <!-- ↓ View ↓ -->
                <!--アイテムの表示方法や列の定義-->
                <ListView.View>
                    <GridView>
                        <!--各カラムの設定、及びデータソースの要素とのバインド-->
                        <GridViewColumn 
                            x:Name="columnSt1OrderCount"
                            Header="1ST" 
                            Width="180"
                            DisplayMemberBinding="{Binding St1}">
                        </GridViewColumn>
                        <GridViewColumn 
                            x:Name="columnSt2OrderCount"
                            Header="2ST" 
                            Width="180"
                            DisplayMemberBinding="{Binding St2}">
                        </GridViewColumn>
                        <GridViewColumn 
                            x:Name="columnSt3OrderCount"
                            Header="3ST" 
                            Width="180"
                            DisplayMemberBinding="{Binding St3}">
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <!-- ↓ ItemContainerStyle ↓ -->
                <!--ListViewItemの、行全体のスタイル設定、変更を行う-->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Height" Value="37" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="Background" Value="Azure" />
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="BorderThickness" Value="0 1 0 0" />
                        <Setter Property="BorderBrush" Value="Black" />
                        <Setter Property="Margin" Value="0"/>

                        <!--テンプレートの設定... コントロールに関するテンプレートを設定する-->
                        <!-- ※マウスオーバー時に行の色がおかしくなるのを防止するために記述 -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <!--テンプレート定義... コントロールの外観や動作を細かく定義できる-->
                                <ControlTemplate TargetType="ListViewItem">
                                    <!--行全体の外観を定義-->
                                    <Border
                                        x:Name="Border" 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                        <!--表示するデータの表示方法を定義-->
                                        <GridViewRowPresenter
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Content="{TemplateBinding Content}"
                                            Columns="{TemplateBinding GridView.ColumnCollection}"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- MouseOver trigger to change the background color when the mouse is over the ListViewItem -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="Blue" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

