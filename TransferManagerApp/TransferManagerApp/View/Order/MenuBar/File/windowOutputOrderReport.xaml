        <ListView 
            x:Name="listviewOrderRemainInfo"
            Grid.Row="2"
            Margin="30,15,30,15"
            FontSize="20"
            Padding="0"
            Background="#F5F5F5"
            ScrollViewer.VerticalScrollBarVisibility="Visible">

            <!-- ↓ Resource ↓ -->
            <ListView.Resources>
                <!--ヘッダー色設定-->
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Background" Value="LightSteelBlue"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                </Style>
            </ListView.Resources>

            <!-- ↓ View ↓ -->
            <!--アイテムの表示方法や列の定義-->
            <ListView.View>
                <GridView>
                    <!--各カラムの設定、及びデータソースの要素とのバインド-->
                    <GridViewColumn 
                        x:Name="columnJanCode"
                        Header="JANコード"
                        Width="100"
                        DisplayMemberBinding="{Binding JanCode}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnWorkCode"
                        Header="商品コード" 
                        Width="100"
                        DisplayMemberBinding="{Binding WorkCode}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnWorkName"
                        Header="商品名" 
                        Width="100"
                        DisplayMemberBinding="{Binding WorkName}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnSupplierCode"
                        Header="取引先コード"
                        Width="100"
                        DisplayMemberBinding="{Binding SupplierCode}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnSupplierName"
                        Header="取引先名" 
                        Width="100"
                        DisplayMemberBinding="{Binding SupplierName}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnOrderCount"
                        Header="仕分予定" 
                        Width="100"
                        DisplayMemberBinding="{Binding OrderCount}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnOrderCompCount"
                        Header="入荷完了" 
                        Width="100"
                        DisplayMemberBinding="{Binding OrderCompCount}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnWorkDamagedCount"
                        Header="庫内破損" 
                        Width="100"
                        DisplayMemberBinding="{Binding DamagedCount}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnOrderRemainCount"
                        Header="未仕分数" 
                        Width="100"
                        DisplayMemberBinding="{Binding RemainCount}">
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnReason"
                        Header="理由" 
                        Width="100"
                        DisplayMemberBinding="{Binding Reason}">
                    </GridViewColumn>
                </GridView>
            </ListView.View>

