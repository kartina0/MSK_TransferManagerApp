        <!--表-->
        <ListView 
            x:Name="listviewEntryWorkInfo"
            Grid.Column="2"
            Margin="10,5,10,5"
            Padding="0"
            Background="Gainsboro"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            FontSize="18">

            <!-- ↓ Resource ↓ -->
            <ListView.Resources>
                <!--ヘッダー色設定-->
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Background" Value="Gainsboro" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="FontSize" Value="17" />
                    <Setter Property="IsHitTestVisible" Value="False" />
                </Style>
            </ListView.Resources>

            <!-- ↓ View ↓ -->
            <!--アイテムの表示方法や列の定義-->
            <ListView.View>
                <GridView>
                    <!--各カラムの設定、及びデータソースの要素とのバインド-->
                    <GridViewColumn 
                        x:Name="columnWorkName"
                        Header="商品名" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    Text="{Binding WorkName}" 
                                    Foreground="Black"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnJanCode"
                        Header="JANコード" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    Text="{Binding JANCode}" 
                                    Foreground="Black"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnOrderCount"
                        Header="仕分予定" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding OrderCount}" 
                                    Foreground="Black"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnOrderCompCount"
                        Header="仕分完了" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    Text="{Binding OrderCompCount}" 
                                    Foreground="Black"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnOrderRemainCount"
                        Header="残り" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    Text="{Binding OrderRemainCount}" 
                                    Foreground="Black"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnOrderProgress"
                        Header="進捗"
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel
                                    Grid.Column="0"
                                    Margin="2,0,2,0"
                                    Width="200"
                                    LastChildFill="False">
                                    <Label
                                        x:Name="lblPercent"
                                        DockPanel.Dock="Left"
                                        Content="{Binding OrderProgress}"
                                        Width="40"
                                        Foreground="Black"
                                        Padding="8,0,1,0"
                                        Margin="0,0,0,0"
                                        HorizontalContentAlignment="Right"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <Label
                                        x:Name="lblPercentMark"
                                        Content="％"
                                        DockPanel.Dock="Left"
                                        Foreground="Black"
                                        Padding="5,0,0,0"
                                        Margin="0,0,10,0"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <ProgressBar
                                        x:Name="progressPercent"
                                        Margin="2"
                                        Width="100"
                                        DockPanel.Dock="Left"
                                        Minimum="0"
                                        Maximum="100"
                                        Background="Gray"
                                        Foreground="Cyan"
                                        BorderBrush="DimGray"
                                        Value="{Binding OrderProgress}"
                                        Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    </ProgressBar>
                                </DockPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        x:Name="columnStatus"
                        Header="ステータス" 
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    Text="{Binding Status}" 
                                    Foreground="Black"
                                    Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <!-- ↓ ItemContainerStyle ↓ -->
            <!--ListViewItemの、行全体のスタイル設定、変更を行う-->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Height" Value="26" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="Background" Value="Gray" />
                    <Setter Property="BorderThickness" Value="0 1 0 0" />
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Padding" Value="0"/>

                    <!--テンプレートの設定... コントロールに関するテンプレートを設定する-->
                    <!-- ※マウスオーバー時に行の色がおかしくなるのを防止するために記述 -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <!--テンプレート定義... コントロールの外観や動作を細かく定義できる-->
                            <ControlTemplate TargetType="ListViewItem">
                                <!--行全体の外観を定義-->
                                <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    SnapsToDevicePixels="True">
                                    <!--表示するデータの表示方法を定義-->
                                    <GridViewRowPresenter 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Content="{TemplateBinding Content}"
                                        Columns="{TemplateBinding GridView.ColumnCollection}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            
        </ListView>



    </Grid>
    
</UserControl>
